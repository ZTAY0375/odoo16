<odoo>
    <data noupdate="0">
            <!-- Define the model first -->
        <record id="model_playground_rate" model="ir.model">
            <field name="name">playground.rate</field>
            <field name="model">playground.rate</field>
            <field name="state">base</field>
        </record>

        <record id="ir_cron_fetch_playground_rates" model="ir.cron">
            <field name="name">Fetch Playground Rates</field>
            <field name="model_id" ref="model_playground_rate"/>
            <field name="state">code</field>
            <field name="code">model.fetch_playground_rates()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>



