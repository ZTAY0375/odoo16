<odoo>
  <!-- Report Template -->
  <template id="playground_report_temp">
    <t t-call="web.external_layout">
      <style>
        .emoji {
          font-family: 'Segoe UI Emoji', 'Noto Color Emoji', 'Arial Unicode MS', sans-serif;
          font-size: 20px;
        }
      </style>
      <main class="page">
        <!-- Header -->
        <div class="oe_structure">
          <h2 class="emoji" style="text-align:center; color:#3f51b5;">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê Playground VAT Rate Report</h2>
          <p style="text-align:center; font-size:12px; color:#777;">Generated on <t t-esc="time.strftime('%d-%m-%Y %H:%M:%S')"/></p>
          <hr/>
        </div>

        <!-- Data Loop -->
        <t t-foreach="docs" t-as="o">
          <div class="oe_structure" style="margin-top:20px;">
            <h4 class="emoji" style="color:#4CAF50;">‚úÖ Rate: <t t-esc="o.name"/></h4>

            <!-- General Info Table -->
            <table class="table table-sm table-bordered" style="width:100%; margin-top:10px;">
              <thead style="background-color:#f5f5f5;">
                <tr>
                  <th>Country Code</th>
                  <th>Country Name</th>
                  <th>EU Member</th>
                  <th>Success</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><t t-esc="o.country_code"/></td>
                  <td><t t-esc="o.country_name"/></td>
                  <td><t t-esc="o.eu and 'Yes' or 'No'"/></td>
                  <td><t t-esc="o.success and 'Yes' or 'No'"/></td>
                </tr>
              </tbody>
            </table>

            <!-- Standard Rate Info Table -->
            <table class="table table-sm table-bordered" style="width:100%; margin-top:20px;">
              <thead style="background-color:#f5f5f5;">
                <tr>
                  <th>Standard Rate (%)</th>
                  <th>Class</th>
                  <th>Description</th>
                  <th>Types</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><t t-esc="o.standard_rate"/>%</td>
                  <td><t t-esc="o.standard_class"/></td>
                  <td><t t-esc="o.standard_description"/></td>
                  <td><t t-esc="o.standard_types"/></td>
                </tr>
              </tbody>
            </table>

            <!-- Other Rates Table -->
            <t t-if="o.other_rate_ids">
              <h5 style="margin-top:30px; color:#2196f3;">üìä Other Rates</h5>
              <table class="table table-sm table-bordered" style="width:100%; margin-top:10px;">
                <thead style="background-color:#f5f5f5;">
                  <tr>
                    <th>Rate (%)</th>
                    <th>Class</th>
                    <th>Description</th>
                    <th>Types</th>
                    <th>Types Array</th>
                  </tr>
                </thead>
                <tbody>
                  <t t-foreach="o.other_rate_ids" t-as="r">
                    <tr>
                      <td><t t-esc="r.rate"/>%</td>
                      <td><t t-esc="r.tax_class"/></td>
                      <td><t t-esc="r.description"/></td>
                      <td><t t-esc="r.types"/></td>
                      <td><t t-esc="r.types_array"/></td>
                    </tr>
                  </t>
                </tbody>
              </table>
            </t>

            <hr style="margin:30px 0;"/>
          </div>
        </t>

        <!-- Footer -->
        <div class="oe_structure" style="text-align:center; font-size:10px; color:#aaa; margin-top:30px;">
          <p>Generated by Odoo | <t t-esc="user.company_id.name"/> | <t t-esc="time.strftime('%d-%m-%Y %H:%M:%S')"/></p>
        </div>
      </main>
    </t>
  </template>

  <!-- Report Action -->
  <report 
    id="playground_report" 
    string="Playground Rate Report" 
    model="playground.rate" 
    report_type="qweb-pdf" 
    name="playground.playground_report_temp" 
    file="playground.playground_report_temp" 
    print_report_name="'PlaygroundRate_' + (object and object.country_name or '')"
  />
</odoo>
  